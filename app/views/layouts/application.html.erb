<!DOCTYPE html>
<html>
<head>
  <title>Hoarder</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="navbar">
    <%= link_to "Hoarder", root_path %>
    <hr>
    <% if user_signed_in? %>
      <%= current_user.username %>
      <br>
      <%= link_to "sign_out", sessions_path, method: "delete" %>
    <% end %>
  </div>
  <hr>
  <div class="container">
    <%= yield %>
  </div>

</body>
</html>
